ort numpy as np\n","import matplotlib.pyplot as plt\n","import seaborn as sns\n","import warnings\n","warnings.filterwarnings('ignore')\n","\n","print(\"=\" * 80)\n","print(\"TDA TRADING STRATEGY - PHASE 5: ALTERNATIVE TESTS\")\n","print(\"=\" * 80)\n","\n","# ============================================================================\n","# INSTALL DEPENDENCIES\n","# ============================================================================\n","\n","try:\n","    from scipy import linalg\n","    from ripser import ripser\n","    import yfinance as yf\n","except ImportError:\n","    print(\"\\nüì¶ Installing dependencies...\")\n","    subprocess.run([sys.executable, '-m', 'pip', 'install', 'scipy', 'ripser', 'yfinance', '-q'])\n","    from scipy import linalg\n","    from ripser import ripser\n","    import yfinance as yf\n","\n","# ============================================================================\n","# FUNCTION DEFINITIONS\n","# ============================================================================\n","\n","def calculate_residuals(returns_df, lookback=60, alpha=0.5, T=3, threshold=0.3):\n","    \"\"\"Calculate Laplacian residuals\"\"\"\n","    residuals_list = []\n","    dates = []\n","\n","    for i in range(lookback, len(returns_df)):\n","        returns_window = returns_df.iloc[i-lookback:i]\n","        corr = returns_window.corr()\n","\n","        adj = corr.abs().values.copy()\n","        np.fill_diagonal(adj, 0)\n","        adj[adj < threshold] = 0\n","\n","        deg = adj.sum(axis=1)\n","        deg_sqrt_inv = np.diag(1.0 / np.sqrt(deg + 1e-8))\n","        I = np.eye(len(deg))\n","        L_norm = I - deg_sqrt_inv @ adj @ deg_sqrt_inv\n","\n","        diff_op = linalg.fractional_matrix_power(I - alpha * L_norm, T)\n","\n","        x = returns_df.iloc[i].values\n","        h = diff_op @ x\n","        e = x - h\n","\n","        residuals_list.append(e)\n","        dates.append(returns_df.index[i])\n","\n","    return pd.DataFrame(residuals_list, index=dates, columns=returns_df.columns)\n","\n","def calculate_topology(returns_df, lookback=60):\n","    \"\"\"Calculate topology features\"\"\"\n","    dates = []\n","    h1_loops = []\n","    h1_persistence = []\n","\n","    for i in range(lookback, len(returns_df)):\n","        returns_window = returns_df.iloc[i-lookback:i]\n","        corr = returns_window.corr()\n","        dist = np.sqrt(2 * (1 - corr.values))\n","        np.fill_diagonal(dist, 0)\n","\n","        try:\n","            result = ripser(dist, maxdim=1, distance_matrix=True)\n","            h1_diagram = result['dgms'][1]\n","            h1_diagram = h1_diagram[~np.isinf(h1_diagram).any(axis=1)]\n","\n","            dates.append(returns_df.index[i])\n","            h1_loops.append(len(h1_diagram))\n","\n","            if len(h1_diagram) > 0:\n","                lifetimes = h1_diagram[:, 1] - h1_diagram[:, 0]\n","                h1_persistence.append(lifetimes.sum())\n","            else:\n","                h1_persistence.append(0)\n","        except:\n","            if len(dates) > 0:\n","                dates.append(returns_df.index[i])\n","                h1_loops.append(h1_loops[-1])\n","                h1_persistence.append(h1_persistence[-1])\n","\n","    return pd.DataFrame({'h1_loops': h1_loops, 'h1_persistence': h1_persistence}, index=dates)\n","\n","def classify_regimes(topology_df, threshold_percentile=75, rolling_window=30):\n","    \"\"\"Classify market regimes\"\"\"\n","    topology_vol = (\n","        topology_df['h1_loops'].rolling(rolling_window).std() +\n","        topology_df['h1_persistence'].rolling(rolling_window).std()\n","    )\n","    threshold = topology_vol.quantile(threshold_percentile / 100)\n","    regime = pd.Series('stable', index=topology_df.index)\n","    regime[topology_vol > threshold] = 'unstable'\n","    return regime, topology_vol\n","\n","def generate_signals(residuals_df, n_positions=5):\n","    \"\"\"Generate trading signals\"\"\"\n","    signals = pd.DataFrame(index=residuals_df.index, columns=residuals_df.columns, dtype=float)\n","\n","    for date in residuals_df.index:\n","        day_residuals = residuals_df.loc[date]\n","        top_stocks = day_residuals.nlargest(n_positions).index\n","        bottom_stocks = day_residuals.nsmallest(n_positions).index\n","\n","        signals.loc[date, :] = 0\n","        signals.loc[date, top_stocks] = 1.0 / n_positions\n","        signals.loc[date, bottom_stocks] = -1.0 / n_positions\n","\n","    return signals\n","\n","def apply_transaction_costs(portfolio_returns, signals, cost_per_trade=0.0005):\n","    \"\"\"Apply transaction costs\"\"\"\n","    position_changes = signals.diff().abs()\n","    daily_turnover = position_changes.sum(axis=1)\n","    transaction_costs = daily_turnover * cost_per_trade\n","    net_returns = portfolio_returns - transaction_costs\n","    return net_returns, transaction_costs\n","\n","def calculate_performance_metrics(returns_series, name=\"Strategy\"):\n","    \"\"\"Calculate performance metrics\"\"\"\n","    active_returns = returns_series[returns_series != 0]\n","\n","    if len(active_returns) == 0:\n","        return {'Name': name, 'CAGR': 0, 'Sharpe': 0, 'Volatility': 0, 'Max DD': 0, 'Win Rate': 0}\n","\n","    cum = (1 + returns_series).cumprod()\n","    n_years = len(returns_series) / 252\n","\n","    cagr = (cum.iloc[-1] ** (1/n_years)) - 1 if n_years > 0 else 0\n","    vol = returns_series.std() * np.sqrt(252)\n","    sharpe = (returns_series.mean() * 252) / vol if vol > 0 else 0\n","\n","    cum_max = cum.cummax()\n","    dd = (cum - cum_max) / cum_max\n","    max_dd = dd.min()\n","\n","    win_rate = (active_returns > 0).mean()\n","\n","    return {'Name': name, 'CAGR': cagr, 'Sharpe': sharpe, 'Volatility': vol, 'Max DD': max_dd, 'Win Rate': win_rate}\n","\n","def simple_mean_reversion_strategy(returns_df, lookback=60, n_positions=5, transaction_cost=0.0005):\n","    \"\"\"Simple z-score mean reversion\"\"\"\n","    rolling_mean = returns_df.rolling(lookback).mean()\n","    rolling_std = returns_df.rolling(lookback).std()\n","    z_scores = (returns_df - rolling_mean) / (rolling_std + 1e-8)\n","\n","    signals = pd.DataFrame(index=returns_df.index, columns=returns_df.columns, dtype=float)\n","\n","    for date in z_scores.index[lookback:]:\n","        day_z = z_scores.loc[date]\n","        long_stocks = day_z.nsmallest(n_positions).index\n","        short_stocks = day_z.nlargest(n_positions).index\n","\n","        signals.loc[date, :] = 0\n","        signals.loc[date, long_stocks] = 1.0 / n_positions\n","        signals.loc[date, short_stocks] = -1.0 / n_positions\n","\n","    signals_lag = signals.shift(1)\n","    portfolio_gross = (signals_lag * returns_df).sum(axis=1).dropna()\n","    portfolio_net, costs = apply_transaction_costs(portfolio_gross, signals_lag.dropna(), transaction_cost)\n","\n","    return portfolio_net, signals, costs\n","\n","# ============================================================================\n","# LOAD ORIGINAL EQUITY DATA\n","# ============================================================================\n","\n","print(\"\\nüìÇ Downloading equity data...\")\n","\n","equity_universe = [\n","    'AAPL', 'MSFT', 'AMZN', 'NVDA', 'META', 'GOOG', 'TSLA',\n","    'NFLX', 'JPM', 'PEP', 'CSCO', 'ORCL', 'DIS', 'BAC',\n","    'XOM', 'IBM', 'INTC', 'AMD', 'KO', 'WMT'\n","]\n","\n","# Download all at once\n","print(\"Downloading all equities...\")\n","equity_data = yf.download(equity_universe, start='2019-01-01', end='2024-12-10', group_by='ticker')\n","\n","# Extract Close prices\n","equity_prices_list = []\n","for ticker in equity_universe:\n","    try:\n","        if len(equity_universe) == 1:\n","            close_prices = equity_data['Close']\n","        else:\n","            close_prices = equity_data[ticker]['Close']\n","\n","        equity_prices_list.append(close_prices.rename(ticker))\n","        print(f\"  {ticker} ‚úÖ\")\n","    except:\n","        print(f\"  {ticker} ‚ùå\")\n","\n","# Combine into DataFrame\n","returns = pd.concat(equity_prices_list, axis=1).pct_change().dropna()\n","\n","print(f\"\\n‚úÖ Loaded {len(returns)} days √ó {len(returns.columns)} stocks\")\n","\n","# ============================================================================\n","# TEST 1: ALTERNATIVE ASSETS\n","# ============================================================================\n","\n","print(\"\\n\" + \"=\" * 80)\n","print(\"TEST 1: TDA ON ALTERNATIVE ASSETS\")\n","print(\"=\" * 80)\n","\n","diverse_universe = [\n","    'GLD', 'USO', 'UNG', 'DBA', 'DBB',  # Commodities\n","    'FXE', 'FXY', 'FXB', 'FXA', 'FXC',  # Currencies\n","    'XLE', 'XLF', 'XLV', 'XLU', 'XLP', 'XLK', 'XLI', 'XLB',  # Sectors\n","    'TLT', 'IEF'  # Bonds\n","]\n","\n","print(f\"\\nDownloading alternative assets...\")\n","div_data = yf.download(diverse_universe, start='2019-01-01', end='2024-12-10', group_by='ticker')\n","\n","div_prices_list = []\n","for ticker in diverse_universe:\n","    try:\n","        if len(diverse_universe) == 1:\n","            close_prices = div_data['Close']\n","        else:\n","            close_prices = div_data[ticker]['Close']\n","\n","        div_prices_list.append(close_prices.rename(ticker))\n","        print(f\"  {ticker} ‚úÖ\")\n","    except:\n","        print(f\"  {ticker} ‚ùå\")\n","\n","div_returns = pd.concat(div_prices_list, axis=1).pct_change().dropna()\n","\n","print(f\"\\n‚úÖ Loaded {len(div_returns.columns)} alternative assets\")\n","\n","# Correlation analysis\n","div_corr = div_returns.tail(252).corr()\n","avg_div_corr = div_corr.values[np.triu_indices_from(div_corr.values, k=1)].mean()\n","equity_corr = returns.tail(252).corr()\n","avg_equity_corr = equity_corr.values[np.triu_indices_from(equity_corr.values, k=1)].mean()\n","\n","print(f\"\\nüìä Correlation:\")\n","print(f\"  Alternative assets: {avg_div_corr:.3f}\")\n","print(f\"  Original equities:  {avg_equity_corr:.3f}\")\n","\n","# Test TDA on alternatives\n","print(\"\\n‚è≥ Running TDA on alternatives (2 years)...\")\n","recent_div = div_returns.tail(504)\n","\n","try:\n","    print(\"  Calculating residuals...\")\n","    div_residuals = calculate_residuals(recent_div, lookback=60)\n","    print(\"  Calculating topology...\")\n","    div_topology = calculate_topology(recent_div, lookback=60)\n","    div_regime, _ = classify_regimes(div_topology)\n","\n","    div_signals = generate_signals(div_residuals, n_positions=5)\n","    div_signals_filt = div_signals.copy()\n","    div_signals_filt.loc[div_regime[div_regime == 'unstable'].index] = 0\n","\n","    div_sig_lag = div_signals_filt.shift(1)\n","    div_port_gross = (div_sig_lag * recent_div.loc[div_sig_lag.index]).sum(axis=1).dropna()\n","    div_port_net, _ = apply_transaction_costs(div_port_gross, div_sig_lag.dropna(), 0.0005)\n","\n","    div_metrics = calculate_performance_metrics(div_port_net, \"TDA - Alternatives\")\n","\n","    print(f\"\\n‚úÖ TDA on Alternatives:\")\n","    print(f\"  Sharpe: {div_metrics['Sharpe']:.2f}\")\n","    print(f\"  CAGR:   {div_metrics['CAGR']:.2%}\")\n","\n","except Exception as e:\n","    print(f\"‚ùå Failed: {e}\")\n","    div_metrics = {'Sharpe': 0, 'CAGR': 0, 'Max DD': 0, 'Win Rate': 0}\n","\n","# ============================================================================\n","# TEST 2: SIMPLE MEAN REVERSION\n","# ============================================================================\n","\n","print(\"\\n\" + \"=\" * 80)\n","print(\"TEST 2: SIMPLE MEAN REVERSION\")\n","print(\"=\" * 80)\n","\n","print(\"\\nTest 2A: Simple MR on Equities\")\n","recent_equity = returns.tail(504)\n","simple_port_equity, _, _ = simple_mean_reversion_strategy(recent_equity, lookback=60, n_positions=5)\n","simple_metrics_equity = calculate_performance_metrics(simple_port_equity, \"Simple MR - Equities\")\n","\n","print(f\"  Sharpe: {simple_metrics_equity['Sharpe']:.2f}\")\n","print(f\"  CAGR:   {simple_metrics_equity['CAGR']:.2%}\")\n","\n","print(\"\\nTest 2B: Simple MR on Alternatives\")\n","simple_port_div, _, _ = simple_mean_reversion_strategy(recent_div, lookback=60, n_positions=5)\n","simple_metrics_div = calculate_performance_metrics(simple_port_div, \"Simple MR - Alternatives\")\n","\n","print(f\"  Sharpe: {simple_metrics_div['Sharpe']:.2f}\")\n","print(f\"  CAGR:   {simple_metrics_div['CAGR']:.2%}\")\n","\n","# ============================================================================\n","# FINAL COMPARISON\n","# ============================================================================\n","\n","print(\"\\n\" + \"=\" * 80)\n","print(\"FINAL RESULTS\")\n","print(\"=\" * 80)\n","\n","results = pd.DataFrame({\n","    'Strategy': [\n","        'TDA - Equities (Walk-Forward)',\n","        'TDA - Alternatives (2Y)',\n","        'Simple MR - Equities (2Y)',\n","        'Simple MR - Alternatives (2Y)'\n","    ],\n","    'Sharpe': [\n","        -0.56,\n","        div_metrics['Sharpe'],\n","        simple_metrics_equity['Sharpe'],\n","        simple_metrics_div['Sharpe']\n","    ],\n","    'CAGR': [\n","        -0.1355,\n","        div_metrics['CAGR'],\n","        simple_metrics_equity['CAGR'],\n","        simple_metrics_div['CAGR']\n","    ]\n","})\n","\n","print(\"\\n\" + results.to_string(index=False))\n","\n","best_sharpe = results['Sharpe'].max()\n","best_strategy = results.loc[results['Sharpe'].idxmax(), 'Strategy']\n","\n","print(f\"\\n{'='*80}\")\n","print(f\"BEST STRATEGY: {best_strategy}\")\n","print(f\"Sharpe: {best_sharpe:.2f}\")\n","print(\"=\" * 80)\n","\n","print(\"\\n‚úÖ PHASE 5 COMPLETE\")"]}]}